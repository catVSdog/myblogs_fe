{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "alloy",
        "alloy/typescript",
        "alloy/vue"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/explicit-member-accessibility": "off", // 显式声明类成员的可访问性, e.g.  public name: string
        "no-console": "off",
        "grouped-accessor-pairs": "off",
        "no-constructor-return": "off",
        "no-dupe-else-if": "off",
        "no-import-assign": "off",
        "no-setter-return": "off",
        "prefer-regex-literals": "off",
        "@typescript-eslint/no-require-imports": "off"
    }
}